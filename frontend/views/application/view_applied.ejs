<div class="w-[80%] mx-auto bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-bold text-gray-700 text-center">Your Applications</h2>

    <input type="text" placeholder="Search applications..." 
        class="w-full p-2 border border-gray-300 rounded mt-4"
        data-bind="value: searchQuery, valueUpdate: 'input'">

    <table class="w-full mt-4 border-collapse border border-gray-300">
        <thead>
            <tr class="bg-gray-200">
                <th class="border border-gray-300 px-4 py-2">Application ID</th>
                <th class="border border-gray-300 px-4 py-2">Company</th>
                <th class="border border-gray-300 px-4 py-2">Job Title</th>
                <th class="border border-gray-300 px-4 py-2">Applied Date</th>
                <th class="border border-gray-300 px-4 py-2">Status</th>
                <th class="border border-gray-300 px-4 py-2">Interview Slot</th>
                <th class="border border-gray-300 px-4 py-2">Appeared</th>
                <th class="border border-gray-300 px-4 py-2">Package</th>
                <th class="border border-gray-300 px-4 py-2">Joining Date</th>
                <th class="border border-gray-300 px-4 py-2">Work Location</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: filteredApplications">
            <tr class="border border-gray-300">
                <td class="border border-gray-300 px-4 py-2" data-bind="text: applicationId"></td>
                <td class="border border-gray-300 px-4 py-2" data-bind="text: companyName"></td>
                <td class="border border-gray-300 px-4 py-2" data-bind="text: jobTitle"></td>
                <td class="border border-gray-300 px-4 py-2" data-bind="text: appliedDate"></td>
                <td class="border border-gray-300 px-4 py-2" data-bind="text: applicationStatus"></td>
                <td class="border border-gray-300 px-4 py-2" data-bind="text: interviewSlot ? interviewSlot : '-'"></td>
                <td class="border border-gray-300 px-4 py-2" data-bind="text: studentAppeared !== null ? (studentAppeared ? 'Yes' : 'No') : '-'"></td>
                <td class="border border-gray-300 px-4 py-2" data-bind="text: package ? package + ' LPA' : '-'"></td>
                <td class="border border-gray-300 px-4 py-2" data-bind="text: joiningDate ? joiningDate : '-'"></td>
                <td class="border border-gray-300 px-4 py-2" data-bind="text: placeOfWork || '-'"></td>
            </tr>
        </tbody>
    </table>
</div>

<script src="/javascripts/knockout.js"></script>
<script src="/javascripts/application/view_applied.js"></script>
